#include <stdio.h>
int main()
{
   double bonus=0;
	double i=210000;
	double bonus1,bonus2,bonus3,bonus4,bonus5;
	bonus1=100000*0.01;
	bonus2=bonus1+200000*0.02;
	bonus3=bonus2+300000*0.03;
	if(i<100000)
		{bonus=i*0.01;}
	else if(i<300000)
		{
			bonus=bonus1+(i-100000)*0.02;
		}
	else if(i<600000)
		{
			bonus=bonus2+(i-300000)*0.03;
		}
	else if(i>=600000)
		{
			bonus=bonus3+(i-600000)*0.04;
		}
	printf("%lf\n",bonus);
   return 0;
}
